{
  "manifest_version": 2,
  "name": "Tab Separator",
  "version": "1.3",
  "description": "Replaces new tab page with a blank page to separate groups of tabs.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.htm",
  "page_action": {
    "default_icon": {
      "19": "images/page19.png",
      "38": "images/page38.png"
    },
    "default_title": "Change Tab Separator Display",
    "default_popup": "popup.htm"
  },
  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent",
    "tabs"
  ]
}
